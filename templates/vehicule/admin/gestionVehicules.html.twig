{% extends 'layout.html.twig' %}
{% block title %} Nos véhicules {% endblock %}
{% block content %}
	{% if app.request.get('_route') == 'admin_app_allVehicules' %}

		<table class="table">
			<thead>
				<tr>
					<th scope="col">Titre</th>
					<th scope="col">Marque</th>
					<th scope="col">Modèle</th>
					<th scope="col">Description</th>
					<th scope="col">Photo</th>
					<th scope="col">Prix journalier</th>
					<th scope="col">Date d'enregistrement</th>
					<th scope="col">Modifier ou supprimer</th>


				</tr>
			</thead>
			<tbody>
			
				{% for vehicule in vehicules %}
					<tr>
						<td>{{vehicule.titre}}</td>
						<td>{{vehicule.marque}}</td>
						<td>{{vehicule.modele}}</td>
						<td>{{vehicule.description|slice(0,100)}}...</td>
						<td><img class="img-thumbnail" src="{{asset('photoVehicules/' ~ vehicule.photo)}}" alt="{{vehicule.photo}}"></td>
						<td>{{vehicule.prixJournalier}}</td>
						<td>{{vehicule.dateEnregistrement|date("d/m/y")}}</td>
						<td>
							<a href="{{path("app_vehicule",{id:vehicule.id})}}">
								<i class="fas fa-eye mx-1"></i>
							</a>
							<a href="{{path("admin_update_vehicule",{id:vehicule.id})}}">
								<i class="fas fa-edit mx-1 text-success"></i>
							</a>
							<a href="{{path("admin_delete_vehicule",{id:vehicule.id})}}">
								<i class="fas fa-trash mx-1 text-danger" onclick="return confirm('êtes vous sûr de vouloir supprimer le véhicule')"></i>
							</a>

						</td>


					</tr>
				{% endfor %}
			</tbody>
		</tbody>
	</table>
{% elseif app.request.get('_route') == 'admin_app_vehicules'%}
	<div>
		<h2>Nos véhicules</h2>
	</div>
	<div class="row d-flex justify-content-center text-center ">
		{% for vehicule in vehicules %}
			<div class="card m-2" style="width: 18rem;">
				<div class="card-body text-center">
					<h5 class="card-title">{{vehicule.titre}}</h5>
					<h6>{{vehicule.marque}}</h6>
					<h6>{{vehicule.modele}}</h6>
					<p class="card-text">{{vehicule.description|slice(0,50)}}...</p>
					<img class="card-img-top" src=" {{asset('photoVehicules/' ~ vehicule.photo)}} " alt=" {{vehicule.photo}} ">
					<p><p>
					<h6>{{vehicule.prixJournalier}} €/jour</h6>
					<p><p>
					<a href="{{path("app_vehicule",{id:vehicule.id})}}" class="btn btn-primary">Louer</a>

				</div>
			</div>
		{% endfor %}
	</div>
{% endif %}{% endblock %}