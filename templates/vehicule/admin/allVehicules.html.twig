{% extends "layout.html.twig" %}

{% block title %} {{ parent() }} -La liste des véhicules {% endblock %}

{% block content %}
<h2>La liste des véhicules</h2>
        <table class="table text-center">
            <thead class="thead-dark">
                <tr>
                    <th>marque</th>
                    <th>modele</th>
                    <th>description</th>
                    <th>description</th>
                    <th>prixJournalier</th>
                    <th>dateEnregistrement</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for vehicule in vehicules %}     
                    <tr>
                        <td>{{ vehicule.marque }}</td>
                        <td>{{ vehicule.modele }}</td>
                        <td>{{ vehicule.prixJournalier }}</td>
                        <td>{{ vehicule.dateEnregistrement | date("d/m/Y") }}</td>
                        <td>
                            <a href="{{ path("admin_app_allVehicules", {id:vehicule.id} ) }}"><i class="fas fa-eye mx-1"></i></a>
                            <a href="{{ path("admin_update_vehicule", {id: vehicule.id} ) }}"><i class="fas fa-edit mx-1 text-success"></i></a>
                            <a href="{{ path("admin_delete_vehicule", {id: vehicule.id} ) }}"><i class="fas fa-trash mx-1 text-danger" onclick="return confirm('êtes vous sûr de vouloir supprimer ce véhicule ?') " ></i></a>
                            
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
{% endblock content %}